extends layout

block content
  h1 #{title}: #{genre.name}
  p= genre._id

  if genreBooks.length

    p #[strong Delete the following books before attempting to delete this genre.]

    div(style="margin-left:20px;margin-top:20px")

      h4 Genre's Books

      dl
      each book in genreBooks
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}  
        
  else
    p Do you really want to delete this genre?

    form(method="POST" action="")
      div.form-group
        input#genreId.form-control(type="hidden",name="genreId", required="true", value=genre._id )

      button.btn.btn-primary(type="submit") Delete
